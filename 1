using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Geotransform : MonoBehaviour
{
    public float moveSpeed = 5f;
    public float rotateSpeed = 100f;
    public float scaleSpeed = 0.5f;

    void Start()
    {
        Debug.Log("Use keyboard and mouse");
    }

    void Update()
    {
        //move
       float moveX = Input.GetAxis("Horizontal") * moveSpeed * Time.deltaTime; 
       float moveZ = Input.GetAxis("Vertical") * moveSpeed * Time.deltaTime; 
       transform.Translate(moveX,0,moveZ);

       //rotate
       if(Input.GetKey(KeyCode.Q))
       {
        transform.Rotate(Vector3.up, -rotateSpeed*Time.deltaTime);
       }
       if(Input.GetKey(KeyCode.E))
       {
        transform.Rotate(Vector3.up, rotateSpeed*Time.deltaTime);
       }

      //scale
      if(Input.GetKey(KeyCode.R))
      {
        transform.localScale +=Vector3.one*scaleSpeed*Time.deltaTime;
      }
      if(Input.GetKey(KeyCode.F))
      {
        transform.localScale -=Vector3.one*scaleSpeed*Time.deltaTime;
      }
    }
}

--------------------

using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Prog1 : MonoBehaviour
{
    // Start is called before the first frame update

    public GameObject Cube, Plane, Sphere;

    // Update is called once per frame
    void Update()
    {
        if (Input.GetKey(KeyCode.W)) Cube.transform.position += new Vector3(0,0,0.05f);
        if (Input.GetKey(KeyCode.S)) Cube.transform.position -= new Vector3(0,0,0.05f);
        if (Input.GetKey(KeyCode.Q)) Sphere.transform.position += new Vector3(0,0,0.05f);
        if (Input.GetKey(KeyCode.A)) Sphere.transform.position -= new Vector3(0,0,0.05f);
        if (Input.GetKey(KeyCode.E)) Plane.transform.position += new Vector3(0,0,0.05f);
        if (Input.GetKey(KeyCode.D)) Plane.transform.position -= new Vector3(0,0,0.05f);

        if (Input.GetKey(KeyCode.R)) Cube.transform.localScale += new Vector3(0,0,0.05f);
        if (Input.GetKey(KeyCode.F)) Cube.transform.localScale -= new Vector3(0,0,0.05f);
        if (Input.GetKey(KeyCode.T)) Sphere.transform.localScale += new Vector3(0,0,0.05f);
        if (Input.GetKey(KeyCode.G)) Sphere.transform.localScale -= new Vector3(0,0,0.05f);
        if (Input.GetKey(KeyCode.Y)) Plane.transform.localScale += new Vector3(0,0,0.05f);
        if (Input.GetKey(KeyCode.H)) Plane.transform.localScale -= new Vector3(0,0,0.05f);

        if (Input.GetKey(KeyCode.Z)) Cube.transform.Rotate(1,0,0);
        if (Input.GetKey(KeyCode.X)) Cube.transform.Rotate(-1,0,0);
        if (Input.GetKey(KeyCode.C)) Plane.transform.Rotate(0,1,0);
        if (Input.GetKey(KeyCode.V)) Plane.transform.Rotate(0,-1,0);
    }
}
